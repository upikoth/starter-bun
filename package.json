{
  "name": "starter-bun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "run-p lint:js lint:ts",
    "lint:js": "eslint .",
    "lint:ts": "tsc",
    "build": "bun build --target=bun ./index.ts --outdir dist && cp -r ./internal/repository/sqlite/migrations dist",
    "create-migrations": "drizzle-kit generate:sqlite --config ./internal/repository/sqlite/drizzle.config.ts"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "npm-run-all": "^4.1.5",
    "yorkie": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.504.0",
    "cookie": "^0.6.0",
    "drizzle-orm": "^0.29.1",
    "joi": "^17.11.0",
    "nodemailer": "^6.9.8",
    "path-to-regexp": "^6.2.1",
    "winston": "^3.11.0"
  },
  "gitHooks": {
    "pre-commit": "bun run lint"
  }
}
